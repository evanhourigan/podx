# Copy to .env and adjust as needed, then `direnv allow`.
HUGGINGFACE_TOKEN=hf_xxx   # for diarization (pyannote) via WhisperX (optional)
PODX_DEFAULT_MODEL=small.en
PODX_DEFAULT_COMPUTE=int8
# --- LLM for podx-deepcast ---
OPENAI_API_KEY=sk-...
OPENAI_BASE_URL= # optional, leave empty unless using a gateway
OPENAI_MODEL=gpt-4o-mini # override at CLI if you like
OPENAI_TEMPERATURE=0.2

# --- Notion API for podx-notion ---
NOTION_TOKEN=secret_xxx
NOTION_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_TITLE_PROP=Name  # the Title property name in your database
NOTION_DATE_PROP=Date   # the Date property name in your database
