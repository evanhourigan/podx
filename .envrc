# direnv: create & activate local venv automatically, and load .env
# Requires: brew install direnv; then hook direnv into your shell (see README).

# Create a venv if absent and activate it
if [ ! -d .venv ]; then
  python3 -m venv .venv
fi
source .venv/bin/activate

# Load env vars from .env if present
has dotenv && dotenv

# Helpful prompt hint
export VIRTUAL_ENV_DISABLE_PROMPT=1

# Keep PYTHONPATH clean for editable installs
unset PYTHONPATH